{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "jsx": "react",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
